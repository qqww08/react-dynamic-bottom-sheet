{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "rootDir": "src",
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "noEmitOnError": true,
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "src/example"
  ]
}
